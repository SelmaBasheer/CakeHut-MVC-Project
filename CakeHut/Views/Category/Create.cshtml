@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient">
        <h2 class="text-white text-center py-3">Create Category</h2>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-6 col-md-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Create</button>
                </div>
                <div class="col-6 col-md-3 text-center">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100">Back To List</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
