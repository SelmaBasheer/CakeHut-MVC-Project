@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12">
                <h2 class="text-white text-center py-2">Category List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-light table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" style="width: 25%;">Category Name</th>
                        <th scope="col" style="width: 10%;">Display Order</th>
                        <th scope="col" style="width: 10%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm ms-2">
                                        <i class="bi bi-trash3"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination Controls -->
    <nav class="d-flex justify-content-center mt-4">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
