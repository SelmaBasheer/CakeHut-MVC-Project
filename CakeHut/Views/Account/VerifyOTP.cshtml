@model VerifyOtpDto

<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px;">
        <div class="card bg-white mb-5 mt-5 border-1" style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.02);">
            <div class="card-body p-5 text-center">
                <h4>Verify OTP</h4>
                <p>Your code was sent to you via email.</p>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class='alert alert-danger alert-dismissible fade show' role='alert'>
                        <strong>@ViewBag.ErrorMessage</strong>
                        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                    </div>
                }
                else if (ViewBag.SuccessMessage != null)
                {
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@ViewBag.SuccessMessage</strong>
                        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                    </div>
                }

                @if (ViewBag.ExpiryTime != null)
                {
                <p class="text-danger">OTP expires at: @ViewBag.ExpiryTime.ToString("hh:mm tt")</p>
                }

                <form method="post" onsubmit="combineOTP()">
                    <div class="otp-field mb-4  d-flex justify-content-between">
                        <input type="text" class="form-control mx-2 otp-input" id="otp1" name="otp1" maxlength="1" required />
                        <input type="text" class="form-control mx-2 otp-input" id="otp2" name="otp2" maxlength="1" required />
                        <input type="text" class="form-control mx-2 otp-input" id="otp3" name="otp3" maxlength="1" required />
                        <input type="text" class="form-control mx-2 otp-input" id="otp4" name="otp4" maxlength="1" required />
                        <input type="text" class="form-control mx-2 otp-input" id="otp5" name="otp5" maxlength="1" required />
                        <input type="text" class="form-control mx-2 otp-input" id="otp6" name="otp6" maxlength="1" required />
                    
                        <input type="hidden" id="otp" name="otp" />
                    
                    </div>

                    <button type="submit" class="btn btn-primary mb-3">Verify</button>
                    <div>
                    <p class="resend text-muted mb-0">
                        Didn't receive code? 
                    <button type="submit" asp-controller="Account" asp-action="ResendOTP" class="btn btn-link">Resend OTP</button>
                    </p>
                    </div>
                </form>

                <script>
                    function combineOTP() {
                        const otp1 = document.getElementById('otp1').value;
                        const otp2 = document.getElementById('otp2').value;
                        const otp3 = document.getElementById('otp3').value;
                        const otp4 = document.getElementById('otp4').value;
                        const otp5 = document.getElementById('otp5').value;
                        const otp6 = document.getElementById('otp6').value;

                        const fullOtp = otp1 + otp2 + otp3 + otp4 + otp5 + otp6;
                        document.getElementById('otp').value = fullOtp;
                    }
                </script>
                
            </div>
        </div>
    </div>
</div>


