@model CakeHut.Models.ViewModels.SalesReportViewModel

<h2>Sales Report</h2>

<div>
    <form method="get" asp-action="SalesReport">
        <label for="filterType">Filter:</label>
        <select id="filterType" name="filterType">
            <option value="custom">Custom</option>
            <option value="daily">Daily</option>
            <option value="weekly">Weekly</option>
            <option value="monthly">Monthly</option>
        </select>
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" value="@Model.ReportStartDate.ToString("yyyy-MM-dd")" />
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate" value="@Model.ReportEndDate.ToString("yyyy-MM-dd")" />
        <button type="submit">Filter</button>
    </form>
</div>

<table>
    <thead>
        <tr>
            <th>Total Sales Count</th>
            <th>Total Order Amount</th>
            <th>Total Discounts</th>
            <th>Total Coupon Deductions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.TotalSalesCount</td>
            <td>@Model.TotalOrderAmount.ToString("C")</td>
            <td>@Model.TotalDiscounts.ToString("C")</td>
            <td>@Model.TotalCouponDeductions.ToString("C")</td>
        </tr>
    </tbody>
</table>

<h3>Orders</h3>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Client</th>
            <th>Order Date</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ClientId</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
