
    <div class="row pt-4">
        <div class="col-6">
        <h1 class="text-primary">Your Addresses</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Address" asp-action="Add" class="btn btn-primary">
            Add New <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>


<table class="table">
    <thead>
        <tr>
            <th>HomeAddress</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in ViewBag.Addresses)
        {
            <tr>
                <td>@address.HomeAddress</td>
                <td>@address.Street</td>
                <td>@address.City</td>
                <td>@address.State</td>
                <td>@address.PostalCode</td>
                <td>
                    <a href="@Url.Action("Edit", "Address", new { id = address.AddressId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Address", new { id = address.AddressId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            string active = "";
            if (i == ViewBag.PageIndex) active = "active";

            <li class="page-item @active">
                <a class="page-link" asp-route-pageIndex=@i>@i</a>
            </li>
        }
    </ul>
</nav>
