@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<link rel="stylesheet" href="@Url.Content("~/css/testimonial.css")" />

<div style="background-color: white">
    <div class="position-relative text-white">
        <img src="~/cakes/banner-macarons.jpeg" class="img-fluid w-100" alt="hero" />

        <!-- Text overlay on the image -->
        <div class="position-absolute  start-50 translate-middle text-center" style="color: #fff; top: 25%; transform: translateX(-50%);">
            <h1 class="display-2 my-3"><strong>CAKE HUT</strong></h1>
            <h3 class=" my-3"><strong>Your Ultimate Cake Destination!</strong></h3>
            <p class="lead text-dark d-none d-md-block">
                Indulge in a wide selection of freshly baked cakes made with the finest ingredients.
                From classic flavors to unique creations, we offer cakes for every celebration.
            </p>
        </div>
    </div>
</div>


<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Our Signatures</h2>

        <div class="row mb-5 g-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100">
                        <img src="/cakes/@product.ImageUrl" class="img-fluid" alt="..."
                             style="height: 180px; object-fit: contain" />
                        <hr />
                        <h5 class="py-2">@product.Name</h5>
                        
                        <h4 class="mb-3">@(product.Price)Rs</h4>
                        <a class="btn btn-primary btn-sm mb-2" asp-controller="Store"
                           asp-action="Details" asp-route-id="@product.Id" role="button">Details</a>
                        <form asp-controller="Wishlist" asp-action="Add" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn btn-warning btn-sm mb-2">
                                <i class="bi bi-heart"></i>
                            </button>
                        </form>
                        <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @product.Id,  @product.Stock)">
                            Add to Cart <i class="bi bi-cart4"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mx-auto">
            <a class="btn btn-secondary" asp-area="" asp-controller="Store" asp-action="Index">View More</a>
        </div>

        <!-- Start Testimonial Slider -->
        <div class="testimonial-section bg-light py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 mx-auto text-center">
                        <h2 class="section-title text-dark">Testimonials</h2>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="testimonial-slider-wrap text-center">

                            <div id="testimonial-nav">
                                <span class="prev" data-controls="prev"><span class="fa fa-chevron-left"></span></span>
                                <span class="next" data-controls="next"><span class="fa fa-chevron-right"></span></span>
                            </div>

                            <div class="testimonial-slider">

                                <div class="item">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8 mx-auto">

                                            <div class="testimonial-block text-center">
                                                <blockquote class="mb-4">
                                                    <p>&ldquo;The cake was absolutely divine! The moist layers and perfect frosting made my birthday unforgettable. Highly recommend CakeHut for any special occasion.&rdquo;</p>
                                                </blockquote>

                                                <div class="author-info">
                                                    <div class="author-pic">
                                                        <img src="/cakes/customer1.jpg" alt="Sophia James" class="img-fluid rounded-circle" style="width: 80px; height: 80px;">
                                                    </div>
                                                    <h3 class="font-weight-bold">Sophia James</h3>
                                                    <span class="position d-block mb-3">Happy Customer</span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- END item -->

                                <div class="item">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8 mx-auto">

                                            <div class="testimonial-block text-center">
                                                <blockquote class="mb-4">
                                                    <p>&ldquo;CakeHut made the most beautiful wedding cake! The flavors were a hit, and the design was exactly what we envisioned. Thank you for making our day even more special!&rdquo;</p>
                                                </blockquote>

                                                <div class="author-info">
                                                    <div class="author-pic">
                                                        <img src="/cakes/customer2.jpg" alt="Liam Brooks" class="img-fluid rounded-circle" style="width: 80px; height: 80px;">
                                                    </div>
                                                    <h3 class="font-weight-bold">Liam Brooks</h3>
                                                    <span class="position d-block mb-3">Groom</span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- END item -->

                                <div class="item">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8 mx-auto">

                                            <div class="testimonial-block text-center">
                                                <blockquote class="mb-4">
                                                    <p>&ldquo;We ordered a custom cake for our anniversary, and it was beyond our expectations. The attention to detail was amazing, and the taste was just heavenly. Will definitely order again!&rdquo;</p>
                                                </blockquote>

                                                <div class="author-info">
                                                    <div class="author-pic">
                                                        <img src="/cakes/customer3.jpg" alt="Emma White" class="img-fluid rounded-circle" style="width: 80px; height: 80px;">
                                                    </div>
                                                    <h3 class="font-weight-bold">Emma White</h3>
                                                    <span class="position d-block mb-3">Anniversary Celebration</span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- END item -->

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Testimonial Slider -->


    </div>
</div>


