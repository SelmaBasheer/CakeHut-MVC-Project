@model List<Product>


<div class="container-fluid">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cake Name</th>
                <th>CategoryId</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>Weight</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.CategoryId</td>
                    <td>@obj.Description</td>
                    <td>@obj.Price</td>
                    <td><img src="\Cakes\@obj.ImageUrl" width="100" /></td>
                    <td>@obj.Weight</td>
                    <td>@obj.Availability</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-primary btn-sm" asp-controller="Products" asp-action="Edit"
                           asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Delete"
                           asp-route-id="@obj.Id" onclick="return confirm('Are you sure?')"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                    <!--
                    <td style="text-align: center;">
                        <div class="w-75 btn-group " role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-3">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-3">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
                    -->
                </tr>
            }
        </tbody>
    </table>
</div>