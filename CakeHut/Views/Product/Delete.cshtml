@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3" row>
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="CategoryId"></label>
            <input asp-for="CategoryId" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="Weight"></label>
            <input asp-for="Weight" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="Availability"></label>
            <input asp-for="Availability" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>

