@model Coupon

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient">
        <h2 class="text-white text-center py-3">Edit Coupon</h2>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Code" class="form-label">Coupon Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DiscountPercentage" class="form-label">Discount Percentage</label>
                <input asp-for="DiscountPercentage" class="form-control" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                <input asp-for="ExpiryDate" class="form-control" type="date" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="row justify-content-center mt-4">
                <div class="col-6 col-md-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Update</button>
                </div>
                <div class="col-6 col-md-3 text-center">
                    <a asp-controller="Coupon" asp-action="Index" class="btn btn-secondary w-100">Back To List</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
