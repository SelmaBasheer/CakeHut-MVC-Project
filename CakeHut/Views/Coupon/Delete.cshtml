@model Coupon

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h2 class="mb-4 text-danger">Delete Coupon</h2>
                    <p class="lead mb-4">Are you sure you want to delete the coupon <strong>@Model.Code</strong>?</p>
                    <p class="text-muted mb-4">This action cannot be undone, and the coupon will be permanently removed from the system.</p>

                    <form asp-action="Delete" class="d-inline-block">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash-fill"></i> Confirm Delete
                        </button>
                    </form>

                    <a asp-controller="Coupon" asp-action="Index" class="btn btn-secondary btn-lg ms-3">
                        <i class="bi bi-x-circle-fill"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional CSS -->
<style>
    .card {
        border-radius: 10px;
        padding: 20px;
    }

    .lead {
        font-size: 1.2rem;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
    }
</style>
